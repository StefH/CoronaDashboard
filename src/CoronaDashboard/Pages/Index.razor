@page "/"

<Container Fluid="true">
    <div class="card-deck" @ref="@CardDeck1">
        <Card Margin="Margin.Is1.OnMobile.Is2.OnAll">
            <div class="card-header" @ref="IntakeCountHeaderRef">
                <CardText Alignment="TextAlignment.Left">@Resources.IntakeCount_Header</CardText>
            </div>
            @*<CardHeader @ref="IntakeCountHeader"></CardHeader>*@
            <CardBody>
                <CardText><LineChart @ref="IntakeCountLineChart" TItem="double?" OptionsObject="@IntakeCountChartOptionsObject" /></CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.DarkBlue">██</span>
                    @Resources.IntakeCount_Y
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Red">██</span>
                    @string.Format(Resources.IntakeCount_Today, IntakeCountDetails.Today)
                </CardText>
                <CardText><br /></CardText>
                <CardText Style="font-size: 0.9em">@Resources.IntakeCount_BodyText</CardText>
            </CardBody>
            <CardFooter>
                <CardText Color="TextColor.Muted"><small>Periode: @IntakeCountDetails.Dates</small></CardText>
                <CardText Color="TextColor.Muted"><small>Bron data: <a href="https://stichting-nice.nl/">Stichting NICE</a></small></CardText>
            </CardFooter>
        </Card>
        <Card Margin="Margin.Is1.OnMobile.Is2.OnAll">
            <div class="card-header" @ref="DiedAndSurvivorsCumulativeHeaderRef">
                <CardText Alignment="TextAlignment.Left">@Resources.DiedAndSurvivorsCumulative_Header</CardText>
            </div>
            @*<CardHeader>
                    <CardText Alignment="TextAlignment.Left">@Resources.DiedAndSurvivorsCumulative_Header</CardText>
                </CardHeader>*@
            <CardBody>
                <CardText><LineChart @ref="DiedAndSurvivorsCumulativeLineChart" TItem="double" OptionsObject="@IntakeCountChartOptionsObject" /></CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Green">██</span>
                    @Resources.Label_Gezond
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Blue">██</span>
                    @Resources.Label_Verpleegafdeling
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: lightgray">██</span>
                    @Resources.Label_Overleden
                </CardText>
                <CardText><br /></CardText>
                <CardText Style="font-size: 0.9em">@Resources.DiedAndSurvivorsCumulative_BodyText</CardText>
            </CardBody>
            <CardFooter>
                <CardText Color="TextColor.Muted"><small>Periode: @DiedAndSurvivorsCumulativeDates</small></CardText>
                <CardText Color="TextColor.Muted"><small>Bron data: <a href="https://stichting-nice.nl/">Stichting NICE</a></small></CardText>
            </CardFooter>
        </Card>
    </div>
    <div class="card-deck">
        <Card Margin="Margin.Is1.OnMobile.Is2.OnAll">
            <div class="card-header" @ref="AgeDistributionHeaderRef">
                <CardText Alignment="TextAlignment.Left">@Resources.AgeDistribution_Header</CardText>
            </div>
            @*<CardHeader>
                    <CardText Alignment="TextAlignment.Left">@Resources.AgeDistribution_Header</CardText>
                </CardHeader>*@
            <CardBody>
                <CardText><BarChart @ref="AgeDistributionBarChart" TItem="int" OptionsObject="@AgeDistributionChartOptionsObject" /></CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Green">██</span>
                    @Resources.Label_Gezond
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Blue">██</span>
                    @Resources.Label_Verpleegafdeling
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: @AppColors.Yellow">██</span>
                    @Resources.Label_IC
                </CardText>
                <CardText Alignment="TextAlignment.Left" style="font-size: 0.8em">
                    <span style="color: lightgray">██</span>
                    @Resources.Label_Overleden
                </CardText>
                <CardText><br /></CardText>
                <CardText Style="font-size: 0.9em">@Resources.AgeDistribution_BodyText</CardText>
            </CardBody>
            <CardFooter>
                <CardText Color="TextColor.Muted"><small>Periode: @IntakeCountDetails.Dates</small></CardText>
                <CardText Color="TextColor.Muted"><small>Bron data: <a href="https://stichting-nice.nl/">Stichting NICE</a></small></CardText>
            </CardFooter>
        </Card>
        <Card Margin="Margin.Is1.OnMobile.Is2.OnAll">
            <div class="card-header" @ref="BehandelduurDistributionHeaderRef">
                <CardText Alignment="TextAlignment.Left">@Resources.BehandelduurDistribution_Header</CardText>
